pipeline {
  agent any
  stages {
    stage('build') {
      parallel {
        stage('build') {
          steps {
            echo 'This is Build Stage'
          }
        }

        stage('sonar') {
          steps {
            echo 'Sonar analysis'
            sh '''echo "This is SONAR Test"
              ls -la'''
          }
        }

      }
    }

    stage('test') {
      steps {
        echo 'Test running ...123'
        sh '''echo "This is Test stage"
          pwd'''
      }
    }

    stage('deploy') {
      steps {
        echo 'deploy....'
        sh '''echo "Thsi is Delpoy......"
        ls -a'''
      }
    }
    stage('GIT merge to New Feature') {
       when {
        branch 'testing'
        
      }
      steps {
        echo 'Current Branch'
        sh 'git checkout testing'
        sh 'git branch'
        echo 'Checking Out Feature'
        sh 'git checkout new-feature'
        sh 'git pull origin new-feature'

        sh 'git branch'
        echo 'Merging Testing into new feature Branch'
        sh 'git merge testing'
        echo 'Pushing to Origin Master'
        sh 'git push origin new-feature'
      }
    }
    stage('GIT merge to Main') {
       when {
        branch 'new-feature'
        
      }
      steps {
        echo 'Current Branch'
        sh 'git checkout new-feature'
        sh 'git branch'
        echo 'Checking Out Master Branch'
        sh 'git checkout main'
        sh 'git pull origin main'

        sh 'git branch'
        echo 'Merging Testing into Master Branch'
        sh 'git merge new-feature'
        echo 'Pushing to Origin Master'
        sh 'git push origin main'
      }
    }


  }
  
}